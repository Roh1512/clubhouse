doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= title
    link(rel="icon" href="/images/logoicon.svg" type="image/svg+xml")
    link(href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/cerulean/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet" href="/stylesheets/bootstrap.min.css")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav(class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark" id="navbar")
      div(class="container-fluid")
        a(class="navbar-brand" href="/") 
          img( src="/images/logoicon.svg" alt="Logo" height="28" class="d-inline-block align-text-top")
          span(class="logo-text") CLUBHOUSE
        button(button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse" id="navbarColor02")
          ul(class="navbar-nav ms-auto")
            li(class="nav-item")
              a(class="nav-link active" href="/posts") Posts
            li(class="nav-item")
              a(class="nav-link active" href="/users") All users
            if !user
              li(class="nav-item link-btn")
                a(class="nav-link active btn btn-primary btn-sm" href="/users/login") Login
              li(class="nav-item link-btn")
                a(class="nav-link active btn btn-success btn-lg" href="/users/signup") Sign up
            else 
              li(class="nav-item link-btn")
                a(class="nav-link active btn btn-danger btn-sm" href="/users/logout") Logout
              li(class="nav-item link-btn")
                a(class="nav-link active btn btn-success" href="/users/profile") View Profile
            
          


    main
      block content

    footer(class="bg-dark footer" data-bs-theme="dark")
      p(class="copyright-text") Copyright &copy; #{new Date().getFullYear()}

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
